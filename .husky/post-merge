#!/bin/sh

# Check if package.json has changed
if git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep -q "package.json"; then
  echo "ðŸ“¦ Changes to package.json detected. Running npm install..."
  npm install
fi

# Check if go.mod has changed
if git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep -q "go.mod"; then
  echo "ðŸ“¦ Changes to go.mod detected. Running go mod download..."
  cd backend && go mod download
fi 